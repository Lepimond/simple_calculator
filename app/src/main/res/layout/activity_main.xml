<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calculator_text"
        android:layout_width="match_parent"
        android:onClick="toggleKeyboard"
        android:layout_height="50dp"
        android:background="@drawable/calculator_text"
        android:gravity="center"
        android:textColor="#FF9E00"/>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:columnCount="3"
        android:rowCount="6">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="0">

        </Button>

        <Button
            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="1">

        </Button>

        <Button
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="2">

        </Button>

        <Button
            android:id="@+id/btn_3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="3">

        </Button>

        <Button
            android:id="@+id/btn_4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="4">

        </Button>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="5">

        </Button>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="6">

        </Button>

        <Button
            android:id="@+id/btn_7"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="7">

        </Button>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="8">

        </Button>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="9">

        </Button>

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="+">

        </Button>

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="-">

        </Button>

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="*">

        </Button>

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="/">

        </Button>

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="=">

        </Button>

        <Button
            android:id="@+id/btn_c"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="C">

        </Button>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/calculator_button"
            android:text="DEL">

        </Button>

    </GridLayout>

</LinearLayout>